<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context="com.example.android.educationalapp.LoginActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/main_menu_bg" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/medium_margin_padding_size"
        android:alpha="0.5"
        android:background="@drawable/bg_layer" />

    <ImageView
        android:id="@+id/star_wars_logo"
        style="@style/HeaderImage"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/edit_text_question_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/star_wars_logo"
        android:layout_centerHorizontal="true"
        android:text="@string/main_menu_title"
        android:textAllCaps="true"
        android:textColor="#ffff00"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/type_your_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_text_question_number"
        android:layout_marginLeft="@dimen/max_margin_padding_size"
        android:layout_marginRight="@dimen/max_margin_padding_size"
        android:layout_marginTop="@dimen/max_margin_padding_size"
        android:gravity="center_horizontal"
        android:text="@string/type_your_name"
        android:textColor="@android:color/white" />

    <EditText
        android:id="@+id/login_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/type_your_name"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/max_margin_padding_size"
        android:layout_marginRight="@dimen/max_margin_padding_size"
        android:layout_marginTop="@dimen/medium_margin_padding_size"
        android:gravity="center"
        android:hint="@string/type_your_name_hint"
        android:maxLength="16"
        android:textColor="@android:color/darker_gray"
        android:textColorHint="@android:color/darker_gray" />

    <TextView
        style="@style/CommonButton"
        android:layout_below="@id/login_edit_text"
        android:layout_centerHorizontal="true"
        android:onClick="beginTest"
        android:text="@string/begin_test" />

</RelativeLayout>
