<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context="com.example.android.educationalapp.RadioButtonActivity">

    <ImageView
        android:id="@+id/radio_button_background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/_02_boba_fett" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/medium_margin_padding_size"
        android:alpha="0.75"
        android:background="@drawable/bg_layer">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/medium_margin_padding_size"
            android:layout_marginRight="@dimen/medium_margin_padding_size"
            android:layout_marginTop="@dimen/medium_margin_padding_size"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/test_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/min_margin_padding_size"
                android:layout_marginTop="@dimen/min_margin_padding_size"
                android:gravity="center"
                android:text="@string/main_menu_title"
                android:textAllCaps="true"
                android:textColor="#ffff00"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/radio_button_question_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/max_margin_padding_size"
                android:text="Question #2"
                android:textAllCaps="true"
                android:textColor="#ffff00"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/check_box_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/medium_margin_padding_size"
                android:gravity="center_horizontal"
                android:text="Question"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/radio_button_1"
                    style="@style/RadioButtonStyle"
                    android:onClick="checkRadioButton"
                    android:text="answer 1" />

                <RadioButton
                    android:id="@+id/radio_button_2"
                    style="@style/RadioButtonStyle"
                    android:onClick="checkRadioButton"
                    android:text="answer 2" />

                <RadioButton
                    android:id="@+id/radio_button_3"
                    style="@style/RadioButtonStyle"
                    android:onClick="checkRadioButton"
                    android:text="answer 3" />

                <RadioButton
                    android:id="@+id/radio_button_4"
                    style="@style/RadioButtonStyle"
                    android:onClick="checkRadioButton"
                    android:text="answer 4" />
            </RadioGroup>

            <TextView
                style="@style/CommonButton"
                android:onClick="submitAnswer"
                android:text="@string/submit_answer" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
