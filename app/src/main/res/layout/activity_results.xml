<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context="com.example.android.educationalapp.ResultsActivity">

    <ImageView
        android:id="@+id/test_result_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/star_wars_celebration" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/medium_margin_padding_size"
        android:alpha="0.75"
        android:background="@drawable/bg_layer" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView style="@style/HeaderImage" />

        <TextView
            style="@style/MenuTitle"
            android:layout_marginBottom="@dimen/medium_margin_padding_size" />

        <TextView
            android:id="@+id/test_result_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/medium_margin_padding_size"
            android:layout_marginLeft="@dimen/max_margin_padding_size"
            android:layout_marginRight="@dimen/max_margin_padding_size"
            android:layout_marginTop="@dimen/medium_margin_padding_size"
            android:gravity="center_horizontal"
            android:text="@string/test_result_header"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/test_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="1/10"
            android:textColor="@android:color/white"
            android:textSize="26sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/test_result_comments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/medium_margin_padding_size"
            android:layout_marginLeft="@dimen/max_margin_padding_size"
            android:layout_marginRight="@dimen/max_margin_padding_size"
            android:layout_marginTop="@dimen/medium_margin_padding_size"
            android:gravity="center_horizontal"
            android:text="Lorem ipsum"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/try_again"
                style="@style/CommonButton"
                android:onClick="letsGo"
                android:text="@string/try_again" />
            <!---
                        <TextView
                            style="@style/CommonButton"
                            android:onClick="hallOfFame"
                            android:text="@string/hall_of_fame" />
                        -->
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
